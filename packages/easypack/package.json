{
  "name": "@easy-editor/easypack",
  "version": "0.0.2",
  "description": "Build and dev tools for EasyEditor ecosystem",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "easypack": "./dist/bin.js"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    }
  },
  "homepage": "https://github.com/Easy-Editor/EasyEditor",
  "license": "MIT",
  "author": "JinSo <kimjinso@qq.com>",
  "keywords": [
    "@easy-editor",
    "easyeditor",
    "easypack",
    "cli",
    "rollup",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Easy-Editor/EasyEditor",
    "directory": "packages/easypack"
  },
  "scripts": {
    "format": "biome format --write .",
    "lint": "biome check .",
    "build": "npm-run-all -nl build:*",
    "build:clean": "rimraf dist/",
    "build:js": "rollup -c",
    "build:types": "pnpm types",
    "types": "npm-run-all -nl types:*",
    "types:src": "tsc --project tsconfig.build.json"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-react": "^5.0.0",
    "esbuild": "^0.24.0",
    "mri": "^1.2.0",
    "picocolors": "^1.1.1",
    "rollup": "^4.28.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "vite": "^6.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/mri": "^1.1.4",
    "@types/ws": "^8.5.13"
  },
  "peerDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-react": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0"
  }
}
